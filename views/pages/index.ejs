        $("#login_button").click(function(evt) {
            if (login_key.indexOf($("#user_phone").val()) < 0) {
                alert("등록되지 않은 key 입니다!");
                alert("운영자에게 받은 key 값을 정확히 입력하세요. (ex. virus00000)");
