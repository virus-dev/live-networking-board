                            location.reload();
                        }
                    });
                    if (break_value == 0) {
                        alert("로그인 성공!");
                        $(".login-need").show();
                        $(".login").prop('disabled', true);

                        $("#invest_button").click(function(evt) {
                            var user_totalinvest = $("#user_invest1").val() * 1 + $("#user_invest2").val() * 1 + $("#user_invest3").val() * 1 + $("#user_invest4").val() * 1 + $("#user_invest5").val() * 1;
